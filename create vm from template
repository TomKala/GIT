# vCenter Server configuration
$vcenter = “vcenter“
$vcenteruser = “user"
$vcenterpw = "passwd"

# Connect to vCenter Server
write-host “Connecting to vCenter Server $vcenter” -foreground green
$vc = connect-viserver $vcenter -User $vcenteruser -Password $vcenterpw


New-vm -vmhost esx-slot3.jcekb.cz -Name FW1-1 -Template firewall_gold0_template -Datastore SC3020_SAS_LAB -Location (Get-FolderByPath -Path "PRACOVISTE1") 
New-vm -vmhost esx-slot3.jcekb.cz -Name FW1-2 -Template firewall_gold0_template -Datastore SC3020_SAS_LAB -Location (Get-FolderByPath -Path "PRACOVISTE2")
New-vm -vmhost esx-slot3.jcekb.cz -Name FW1-3 -Template firewall_gold0_template -Datastore SC3020_SAS_LAB -Location (Get-FolderByPath -Path "PRACOVISTE3")


